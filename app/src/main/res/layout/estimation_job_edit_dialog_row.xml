<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/estJobEdit_TVLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/deviceBackground"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/estJobEdit_jobNameTV"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:foregroundTint="@color/imageButtonTint"
            android:gravity="center"
            android:text="Job Name"
            android:textColor="@color/secondaryText"
            android:textSize="@dimen/jobDialog_TextSize" />

        <TextView
            android:id="@+id/estJobEdit_jobUnitMeasurementTV"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Measurement Unit"
            android:textColor="@color/secondaryText"
            android:textSize="@dimen/jobDialog_TextSize" />

        <TextView
            android:id="@+id/estJobEdit_jobNoOfUnitsTV"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="No of Units"
            android:textColor="@color/secondaryText"
            android:textSize="@dimen/jobDialog_TextSize" />

        <ImageButton
            android:id="@+id/estJobEdit_editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/deviceBackground"
            android:paddingLeft="5dp"
            android:src="@drawable/ic_mode_edit_black_24dp"
            android:tint="@color/imageButtonTint" />

        <ImageButton
            android:id="@+id/estJobEdit_removeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/deviceBackground"
            android:paddingLeft="5dp"
            android:src="@drawable/ic_delete_black_24dp"
            android:tint="@color/imageButtonTint" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/estJobEdit_ETLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/deviceBackground"
        android:focusable="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <android.support.design.widget.TextInputLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:paddingBottom="8dp">

            <EditText
                android:id="@+id/estJobEdit_jobNameEText"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Job Name"
                android:imeOptions="actionNext"
                android:inputType="textCapSentences"
                android:text="Job Name"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/jobDialog_TextSize" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:paddingBottom="8dp">

            <EditText
                android:id="@+id/estJobEdit_jobUnitMeasurementEtext"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Measurement Unit"
                android:imeOptions="actionNext"
                android:inputType="textCapSentences"
                android:text="Measurement Unit"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/jobDialog_TextSize" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:paddingBottom="8dp">

            <EditText
                android:id="@+id/estJobEdit_jobNoOfUnitsEtext"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="No.of Units"
                android:text="No.of Units"
                android:inputType="numberDecimal"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/jobDialog_TextSize" />

        </android.support.design.widget.TextInputLayout>

        <ImageButton
            android:id="@+id/estJobEdit_finishImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/deviceBackground"
            android:paddingLeft="5dp"
            android:src="@drawable/ic_check_black_24dp"
            android:tint="@color/imageButtonTint" />
    </LinearLayout>
</RelativeLayout>