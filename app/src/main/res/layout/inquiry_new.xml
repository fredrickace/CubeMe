                    <Spinner
                        android:id="@+id/inquiry_jobsTypeSpinner"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/inquiryNew_viewHeight"
                        android:layout_weight="2.75"
                        android:background="@drawable/custom_edittext"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:paddingLeft="@dimen/jobs_LeftPadding"
                        android:textColor="@color/mainText"
                        android:textSize="@dimen/jobs_MainText"
                        android:theme="@style/EditTextTheme" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/inquiryNew_viewHeight"
                        android:layout_weight="1.25"
                        android:gravity="right|center"
                        android:background="@color/textViewBackGround"
                        android:paddingLeft="@dimen/jobs_LeftPadding"
                        android:paddingRight="@dimen/jobs_RightPadding"
