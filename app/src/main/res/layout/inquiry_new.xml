                        android:textSize="@dimen/inquiryNew_secondaryTextSize" />


                    <Spinner
                        android:id="@+id/inquiry_companyEmailSpinner"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.75"
                        android:background="@drawable/custom_edittext"
                        android:paddingLeft="@dimen/inquiryNew_mainTextLeftPadding"
                        android:textColor="@color/mainText"
                        android:textSize="@dimen/inquiryNew_mainTextSize"
                        android:theme="@style/EditTextTheme" />
                </LinearLayout>

                <LinearLayout
