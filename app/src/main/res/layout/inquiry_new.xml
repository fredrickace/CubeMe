                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/inquiryNew_secondaryTextSize" />

                    <EditText
                        android:id="@+id/inquiry_descritptionEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.75"
                        android:background="@drawable/custom_edittext"
                        android:imeOptions="actionNext"
                        android:inputType="textMultiLine|textCapSentences"
                        android:minHeight="@dimen/inquiryNew_viewHeight"
                        android:paddingBottom="10dp"
                        android:paddingLeft="@dimen/inquiryNew_mainTextLeftPadding"
                        android:paddingTop="16dp"
                        android:textColor="@color/mainText"
                        android:textSize="@dimen/inquiryNew_mainTextSize"
                        android:theme="@style/EditTextTheme" />
                </LinearLayout>

                <LinearLayout
