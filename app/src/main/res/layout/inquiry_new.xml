<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Inquiry.InquiryNew">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/app_toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/inquiry_info"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/account_viewHeight"
                        android:layout_weight="1"
                        android:background="@color/groupBackground"
                        android:gravity="fill_vertical"
                        android:paddingLeft="@dimen/account_groupTextLeftPadding"
                        android:text="Inquiry Information"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/account_groupTextSize" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/inquiry_subjectTextView"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/inquiryNew_viewHeight"
                        android:layout_weight="1.25"
                        android:background="@color/textViewBackGround"
                        android:gravity="right|fill_vertical"
                        android:paddingRight="@dimen/inquiryNew_TV_rightPadding"
                        android:text="Subject"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/inquiryNew_secondaryTextSize" />

                    <EditText
                        android:id="@+id/inquiry_subjectEditText"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/inquiryNew_viewHeight"
                        android:layout_weight="2.75"
                        android:background="@drawable/custom_edittext"
                        android:imeOptions="actionNext"
                        android:inputType="textCapSentences"
                        android:paddingLeft="@dimen/inquiryNew_mainTextLeftPadding"
                        android:textColor="@color/mainText"
                        android:textSize="@dimen/inquiryNew_mainTextSize"
                        android:theme="@style/EditTextTheme" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/textViewBackGround"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/inquiry_descriptionTextView"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/inquiryNew_viewHeight"
                        android:layout_weight="1.25"
                        android:background="@color/textViewBackGround"
                        android:gravity="right|fill_vertical"
                        android:paddingRight="@dimen/inquiryNew_TV_rightPadding"
                        android:text="Description"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/inquiryNew_secondaryTextSize" />

                    <EditText
                        android:id="@+id/inquiry_descritptionEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.75"
                        android:background="@drawable/custom_edittext"
                        android:imeOptions="actionNext"
                        android:inputType="textMultiLine|textCapSentences"
                        android:minHeight="@dimen/inquiryNew_viewHeight"
                        android:paddingBottom="10dp"
                        android:paddingLeft="@dimen/inquiryNew_mainTextLeftPadding"
                        android:paddingTop="16dp"
                        android:textColor="@color/mainText"
                        android:textSize="@dimen/inquiryNew_mainTextSize"
                        android:theme="@style/EditTextTheme" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/inquiry_departmentTextView"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/inquiryNew_viewHeight"
                        android:layout_weight="1.25"
                        android:background="@color/textViewBackGround"
                        android:gravity="right|fill_vertical"
                        android:paddingRight="@dimen/inquiryNew_TV_rightPadding"
                        android:text="Department"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/inquiryNew_secondaryTextSize" />

                    <Spinner
                        android:id="@+id/inquiry_deparmentSpinner"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.75"
                        android:background="@drawable/custom_edittext"
                        android:imeOptions="actionNext"
                        android:inputType="textCapSentences"
                        android:paddingLeft="@dimen/inquiryNew_mainTextLeftPadding"
                        android:textColor="@color/mainText"
                        android:textSize="@dimen/inquiryNew_mainTextSize"
                        android:theme="@style/EditTextTheme" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/inquiry_statusTextView"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/inquiryNew_viewHeight"
                        android:layout_weight="1.25"
                        android:background="@color/textViewBackGround"
                        android:gravity="right|fill_vertical"
                        android:paddingRight="@dimen/inquiryNew_TV_rightPadding"
                        android:text="Status"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/inquiryNew_secondaryTextSize" />

                    <Spinner
                        android:id="@+id/inquiry_statusSpinner"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.75"
                        android:background="@drawable/custom_edittext"
                        android:imeOptions="actionNext"
                        android:inputType="textCapSentences"
                        android:paddingLeft="@dimen/inquiryNew_mainTextLeftPadding"
                        android:textColor="@color/mainText"
                        android:textSize="@dimen/inquiryNew_mainTextSize"
                        android:theme="@style/EditTextTheme" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/inquiry_companyTextView"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/inquiryNew_viewHeight"
                        android:layout_weight="1.25"
                        android:background="@color/textViewBackGround"
                        android:gravity="right|fill_vertical"
                        android:paddingRight="@dimen/inquiryNew_TV_rightPadding"
                        android:text="Company"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/inquiryNew_secondaryTextSize" />

                    <AutoCompleteTextView
                        android:id="@+id/inquiry_companyAutoComplete"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/inquiryNew_viewHeight"
                        android:layout_weight="2.75"
                        android:background="@drawable/custom_edittext"
                        android:imeOptions="actionNext"
                        android:inputType="textAutoComplete|textCapSentences"
                        android:paddingLeft="@dimen/inquiryNew_mainTextLeftPadding"
                        android:textColor="@color/mainText"
                        android:textSize="@dimen/inquiryNew_mainTextSize"
                        android:theme="@style/EditTextTheme" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/inquiryNew_viewHeight"
                        android:layout_weight="1.25"
                        android:gravity="right|center_vertical"
                        android:background="@color/textViewBackGround"
                        android:paddingLeft="@dimen/jobs_LeftPadding"
                        android:paddingRight="@dimen/jobs_RightPadding"
                        android:text="Project Type"
                        android:textSize="@dimen/inquiryNew_secondaryTextSize"
                        android:textColor="@color/secondaryText" />

                    <Spinner
                        android:id="@+id/inquiry_jobsTypeSpinner"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/inquiryNew_viewHeight"
                        android:layout_weight="2.75"
                        android:background="@drawable/custom_edittext"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:paddingLeft="@dimen/jobs_LeftPadding"
                        android:textColor="@color/mainText"
                        android:textSize="@dimen/jobs_MainText"
                        android:theme="@style/EditTextTheme" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/inquiryNew_viewHeight"
                        android:layout_weight="1.25"
                        android:gravity="right|center"
                        android:background="@color/textViewBackGround"
                        android:paddingLeft="@dimen/jobs_LeftPadding"
                        android:paddingRight="@dimen/jobs_RightPadding"
                        android:text="Consultant"
                        android:textSize="@dimen/inquiryNew_secondaryTextSize"
                        android:textColor="@color/secondaryText" />

                    <AutoCompleteTextView
                        android:id="@+id/inquiry_jobsConsultantACTV"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/inquiryNew_viewHeight"
                        android:layout_weight="2.75"
                        android:background="@drawable/custom_edittext"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:paddingLeft="@dimen/jobs_LeftPadding"
                        android:textColor="@color/mainText"
                        android:textSize="@dimen/jobs_MainText"
                        android:theme="@style/EditTextTheme" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/inquiryNew_viewHeight"
                        android:layout_weight="1.25"
                        android:background="@color/textViewBackGround"
                        android:gravity="right|center_vertical"
                        android:paddingLeft="@dimen/jobs_LeftPadding"
                        android:paddingRight="@dimen/jobs_RightPadding"
                        android:text="Main Contractor"
                        android:textSize="@dimen/inquiryNew_secondaryTextSize"
                        android:textColor="@color/secondaryText" />

                    <AutoCompleteTextView
                        android:id="@+id/inquiry_jobsContractorACTV"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/inquiryNew_viewHeight"
                        android:layout_weight="2.75"
                        android:background="@drawable/custom_edittext"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:paddingLeft="@dimen/jobs_LeftPadding"
                        android:textColor="@color/mainText"
                        android:textSize="@dimen/jobs_MainText"
                        android:theme="@style/EditTextTheme" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/inquiryNew_viewHeight"
                        android:layout_weight="1.25"
                        android:background="@color/textViewBackGround"
                        android:gravity="right|center_vertical"
                        android:paddingLeft="@dimen/jobs_LeftPadding"
                        android:paddingRight="@dimen/jobs_RightPadding"
                        android:text="Sub Contractor"
                        android:textSize="@dimen/inquiryNew_secondaryTextSize"
                        android:textColor="@color/secondaryText" />

                    <AutoCompleteTextView
                        android:id="@+id/inquiry_jobsSubContractorACTV"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/inquiryNew_viewHeight"
                        android:layout_weight="2.75"
                        android:background="@drawable/custom_edittext"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:paddingLeft="@dimen/jobs_LeftPadding"
                        android:textColor="@color/mainText"
                        android:textSize="@dimen/jobs_MainText"
                        android:theme="@style/EditTextTheme" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/inquiry_contactPersonTextView"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/inquiryNew_viewHeight"
                        android:layout_weight="1.25"
                        android:background="@color/textViewBackGround"
                        android:gravity="right|fill_vertical"
                        android:paddingRight="@dimen/inquiryNew_TV_rightPadding"
                        android:text="Contact Person"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/inquiryNew_secondaryTextSize" />

                    <AutoCompleteTextView
                        android:id="@+id/inquiry_contactPersonAutoComplete"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/inquiryNew_viewHeight"
                        android:layout_weight="2.75"
                        android:background="@drawable/custom_edittext"
                        android:imeOptions="actionNext"
                        android:inputType="textAutoComplete|textCapSentences"
                        android:paddingLeft="@dimen/inquiryNew_mainTextLeftPadding"
                        android:textColor="@color/mainText"
                        android:textSize="@dimen/inquiryNew_mainTextSize"
                        android:theme="@style/EditTextTheme" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/inquiry_contactPersonDesignationTextView"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/inquiryNew_viewHeight"
                        android:layout_weight="1.25"
                        android:background="@color/textViewBackGround"
                        android:gravity="right|fill_vertical"
                        android:paddingRight="@dimen/inquiryNew_TV_rightPadding"
                        android:text="Desgination"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/inquiryNew_secondaryTextSize" />

                    <EditText
                        android:id="@+id/inquiry_contactPersonDesignationET"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/inquiryNew_viewHeight"
                        android:layout_weight="2.75"
                        android:background="@drawable/custom_edittext"
                        android:imeOptions="actionNext"
                        android:inputType="textAutoComplete|textCapSentences"
                        android:paddingLeft="@dimen/inquiryNew_mainTextLeftPadding"
                        android:textColor="@color/mainText"
                        android:textSize="@dimen/inquiryNew_mainTextSize"
                        android:theme="@style/EditTextTheme" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/inquiry_contactNumberTextView"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/inquiryNew_viewHeight"
                        android:layout_weight="1.25"
                        android:background="@color/textViewBackGround"
                        android:gravity="right|fill_vertical"
                        android:paddingRight="@dimen/inquiryNew_TV_rightPadding"
                        android:text="Contact Number"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/inquiryNew_secondaryTextSize" />

                    <EditText
                        android:id="@+id/inquiry_contactNumberCountryCodeEditText"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/inquiryNew_viewHeight"
                        android:layout_weight=".75"
                        android:background="@drawable/custom_edittext"
                        android:hint="+974"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:maxLength="4"
                        android:gravity="center"
                        android:paddingLeft="@dimen/editText_leftPadding"
                        android:textColor="@color/mainText"
                        android:textSize="@dimen/account_mainTextSize"
                        android:theme="@style/EditTextTheme" />

                    <EditText
                        android:id="@+id/inquiry_contactNumberEditText"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/inquiryNew_viewHeight"
                        android:layout_weight="2"
                        android:background="@drawable/custom_edittext"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:paddingLeft="@dimen/inquiryNew_mainTextLeftPadding"
                        android:textColor="@color/mainText"
                        android:textSize="@dimen/inquiryNew_mainTextSize"
                        android:theme="@style/EditTextTheme" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/inquiry_emailTextView"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/inquiryNew_viewHeight"
                        android:layout_weight="1.25"
                        android:background="@color/textViewBackGround"
                        android:gravity="right|fill_vertical"
                        android:paddingRight="@dimen/inquiryNew_TV_rightPadding"
                        android:text="Email"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/inquiryNew_secondaryTextSize" />

                    <EditText
                        android:id="@+id/inquiry_emailEditText"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/inquiryNew_viewHeight"
                        android:layout_weight="2.75"
                        android:background="@drawable/custom_edittext"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="@dimen/inquiryNew_mainTextLeftPadding"
                        android:textColor="@color/mainText"
                        android:textSize="@dimen/inquiryNew_mainTextSize"
                        android:theme="@style/EditTextTheme" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/inquiry_assignTextView"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/inquiryNew_viewHeight"
                        android:layout_weight="1.25"
                        android:background="@color/textViewBackGround"
                        android:gravity="right|fill_vertical"
                        android:paddingRight="@dimen/inquiryNew_TV_rightPadding"
                        android:text="Assign to"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/inquiryNew_secondaryTextSize" />

                    <AutoCompleteTextView
                        android:id="@+id/inquiry_assignAutoText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.75"
                        android:background="@drawable/custom_edittext"
                        android:imeOptions="actionDone"
                        android:inputType="textCapSentences"
                        android:paddingLeft="@dimen/inquiryNew_mainTextLeftPadding"
                        android:textColor="@color/mainText"
                        android:textSize="@dimen/inquiryNew_mainTextSize"
                        android:theme="@style/EditTextTheme" />
                </LinearLayout>

                <Button
                    android:id="@+id/inquiry_newAddButton"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Add"
                    android:textColor="@color/mainText"
                    android:textSize="@dimen/inquiryNew_mainTextSize" />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
