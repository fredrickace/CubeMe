<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cube_me.cubeme_crm.Accounts.AccountViewDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/layoutBackGround"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:elevation="@dimen/accountViewDetail_linearLayoutElevtion"
            android:orientation="vertical">

            <TextView
                android:id="@+id/accountView_detailGroupAccountsInfo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/accountViewDetail_groupTV_height"
                android:background="@color/groupBackground"
                android:gravity="start|center"
                android:paddingLeft="@dimen/accountViewDetail_groupLeftPadding"
                android:text="Accounts Information"
                android:textColor="@color/mainText"
                android:textSize="@dimen/accountViewDetail_groupTextSize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/full_padding">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:gravity="start|fill_vertical"
                        android:layout_gravity="center"
                        android:paddingRight="@dimen/account_TV_rightPadding"
                        android:text="Name"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/accountViewDetail_TV_secondaryText" />

                    <TextView
                        android:id="@+id/accountViewdetails_AccountNameTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="start|fill_vertical"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/accountViewDetail_mainTV_leftPadding"
                        android:text="Cube ME"
                        android:textColor="@color/mainText"
                        android:textSize="@dimen/accountViewDetail_TV_mainText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/full_padding">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:gravity="start|fill_vertical"
                        android:layout_gravity="center"
                        android:paddingRight="@dimen/account_TV_rightPadding"
                        android:text="Company Code"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/accountViewDetail_TV_secondaryText" />

                    <TextView
                        android:id="@+id/accountViewdetails_CodeTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="start|fill_vertical"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/accountViewDetail_mainTV_leftPadding"
                        android:text="Cube ME"
                        android:textColor="@color/mainText"
                        android:textSize="@dimen/accountViewDetail_TV_mainText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/full_padding">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:gravity="start|fill_vertical"
                        android:layout_gravity="center"
                        android:paddingRight="@dimen/account_TV_rightPadding"
                        android:text="Contact Person"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/accountViewDetail_TV_secondaryText" />

                    <TextView
                        android:id="@+id/accountViewdetails_contactPersonTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="start|fill_vertical"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/accountViewDetail_mainTV_leftPadding"
                        android:text="Cube ME"
                        android:textColor="@color/mainText"
                        android:textSize="@dimen/accountViewDetail_TV_mainText" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/accountViewDetails_phoneRowContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/accountViewDetails_emailRowContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/accountViewDetails_addressRowContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/full_padding">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:gravity="start|fill_vertical"
                        android:layout_gravity="center"
                        android:paddingRight="@dimen/account_TV_rightPadding"
                        android:text="Web"
                        android:textColor="@color/secondaryText"
                        android:textSize="@dimen/accountViewDetail_TV_secondaryText" />

                    <TextView
                        android:id="@+id/accountViewdetails_webTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="start|fill_vertical"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/accountViewDetail_mainTV_leftPadding"
                        android:text="Cube ME"
                        android:textColor="@color/mainText"
                        android:textSize="@dimen/accountViewDetail_TV_mainText" />

                </LinearLayout>









            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
