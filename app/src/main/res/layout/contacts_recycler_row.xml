<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contactRow_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--<ImageView-->
        <!--android:id="@+id/contactDP_imageView"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center"-->
        <!--android:src="@drawable/contactimage" />-->

    <LinearLayout
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/full_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="start|fill_vertical"
                android:inputType="textCapWords"
                android:layout_gravity="top|center"
                android:paddingRight="@dimen/account_TV_rightPadding"
                android:text="First Name"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/accountViewDetail_TV_secondaryText" />

            <TextView
                android:id="@+id/contactName_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="start|fill_vertical"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/accountViewDetail_mainTV_leftPadding"
                android:textColor="@color/mainText"
                android:textSize="@dimen/accountViewDetail_TV_mainText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/full_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="start|fill_vertical"
                android:inputType="textCapWords"
                android:layout_gravity="top|center"
                android:paddingRight="@dimen/account_TV_rightPadding"
                android:text="Second Name"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/accountViewDetail_TV_secondaryText" />

            <TextView
                android:id="@+id/contactSecondName_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="start|fill_vertical"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/accountViewDetail_mainTV_leftPadding"
                android:textColor="@color/mainText"
                android:textSize="@dimen/accountViewDetail_TV_mainText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/full_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="start|fill_vertical"
                android:inputType="textCapWords"
                android:layout_gravity="top|center"
                android:paddingRight="@dimen/account_TV_rightPadding"
                android:text="Company Name"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/accountViewDetail_TV_secondaryText" />

            <TextView
                android:id="@+id/contactCompanyName_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="start|fill_vertical"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/accountViewDetail_mainTV_leftPadding"
                android:textColor="@color/mainText"
                android:textSize="@dimen/accountViewDetail_TV_mainText" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/full_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="start|fill_vertical"
                android:inputType="textCapWords"
                android:layout_gravity="top|center"
                android:paddingRight="@dimen/account_TV_rightPadding"
                android:text="Designation"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/accountViewDetail_TV_secondaryText" />

            <TextView
                android:id="@+id/contactDesignation_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="start|fill_vertical"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/accountViewDetail_mainTV_leftPadding"
                android:textColor="@color/mainText"
                android:textSize="@dimen/accountViewDetail_TV_mainText" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/full_padding">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="start|fill_vertical"
                android:inputType="textCapWords"
                android:layout_gravity="top|center"
                android:paddingRight="@dimen/account_TV_rightPadding"
                android:text="Address"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/accountViewDetail_TV_secondaryText" />

            <TextView
                android:id="@+id/contactAddress_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="start|fill_vertical"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/accountViewDetail_mainTV_leftPadding"
                android:textColor="@color/mainText"
                android:textSize="@dimen/accountViewDetail_TV_mainText" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/contactRecycler_phoneNumberContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/contactRecycler_emailContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>




    </LinearLayout>


</LinearLayout>