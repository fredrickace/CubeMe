<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cube_me.cubeme_crm.Calendar.CalendarFragment">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/calendarFragment_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/calendarFragment_addEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/calendar_AddEventFAB_marginLeft"
        android:layout_marginTop="@dimen/floatMarginTop"
        android:src="@drawable/ic_add_white_24dp"
        app:backgroundTint="@color/colorAccentTransparent"
        app:backgroundTintMode="src_atop"
        app:fabSize="mini" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/calendarFragment_pickDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/calendar_AddEventFAB_marginLeft"
        android:layout_marginTop="@dimen/floatMarginTopSecond"
        android:src="@drawable/ic_date_range_white_24dp"
        app:backgroundTint="@color/colorAccentTransparent"
        app:backgroundTintMode="src_atop"
        app:fabSize="mini" />

</FrameLayout>
